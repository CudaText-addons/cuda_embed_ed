{
  // group name - any string
  "global": {
  
    // limit group patterns to a list of lexers
    // if absent - will be applied to all documents
    //"lexers": ["HTML"],
    
    // list of regex patterns
    // file path is extracted from a named regex group with the name "path",
    //   so every pattern must contain this named group
    "path_patterns":[
      "\"(?P<path>[^\"]+)\""
    ]
  },
  "Pascal": {
    "lexers": ["Pascal"],
    "path_patterns":[
      "{\\$[Ii] (?P<path>[^}]+)}"
    ] 
  }
}
